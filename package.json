{
	"name": "svelte-awesome-color-picker",
	"version": "4.0.0-beta.6",
	"description": "A highly customizable color picker component library",
	"homepage": "https://svelte-awesome-color-picker.vercel.app",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ennoriel/svelte-awesome-color-picker.git"
	},
	"author": "Maxime Dupont <m.dupont103@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --open --host",
		"prebuild": "node scripts/index.js && pnpm format",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "vitest"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"dependencies": {
		"colord": "^2.9.3",
		"svelte-awesome-slider": "2.0.0-beta.2"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@eslint/compat": "^1.2.4",
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@sveltejs/kit": "^2.13.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"mdsvex": "^0.12.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"vite": "^6.0.5",
		"vitest": "^3.0.2"
	},
	"keywords": [
		"svelte",
		"color picker"
	]
}
