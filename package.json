{
	"name": "svelte-awesome-color-picker",
	"version": "4.0.2",
	"description": "A highly customizable color picker component library",
	"homepage": "https://svelte-awesome-color-picker.vercel.app",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ennoriel/svelte-awesome-color-picker.git"
	},
	"author": "Maxime Dupont <m.dupont103@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --open --host",
		"prebuild": "node scripts/index.js && pnpm format",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "vitest"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"dependencies": {
		"colord": "^2.9.3",
		"svelte-awesome-slider": "2.0.0"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@eslint/compat": "^1.2.7",
		"@sveltejs/adapter-vercel": "^5.6.3",
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.3.3",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.9",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"svelte": "^5.25.3",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.27.0",
		"vite": "^6.2.2",
		"vitest": "^3.0.9"
	},
	"keywords": [
		"svelte",
		"color picker"
	],
	"packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
